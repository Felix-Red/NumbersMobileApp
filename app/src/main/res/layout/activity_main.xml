<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001D3D">

    <Button
        android:id="@+id/btnLotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:text="Lotto"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPowerball"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtNumbers"
        android:layout_width="447dp"
        android:layout_height="63dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="328dp"
        android:background="#FFC300"
        android:gravity="center"
        android:padding="15dp"
        android:text="Lotto"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPowerball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:text="Powerball"
        app:layout_constraintStart_toEndOf="@+id/btnLotto"
        app:layout_constraintTop_toBottomOf="@+id/txtNumbers" />

    <Button
        android:id="@+id/btnDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Daily"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPowerball"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>